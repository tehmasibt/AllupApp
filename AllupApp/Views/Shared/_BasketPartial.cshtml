@model IEnumerable<BasketVM>




<ul class="cart-items">
    @foreach (var item in Model)
    {
        <li>
            <div class="single-cart-item d-flex">
                <div class="cart-item-thumb">
                    <a asp-controller="product" asp-action="detail" asp-route-id="@item.Id"><img src="~/assets/images/product/@item.Image" alt="product"></a>
                    <span class="product-quantity">@item.Count x</span>
                </div>
                <div class="cart-item-content media-body">
                    <h5 class="product-name"><a href="single-product.html">@item.Name</a></h5>
                    <span class="product-price">€@String.Format("{0:0.0}", item.Price)</span>
                    <a href="#" class="product-close"><i class="fal fa-times"></i></a>
                </div>
            </div>
        </li>
    }
</ul>
<div class="price_content">
    <div class="cart-subtotals">
        <div class="products price_inline">
            <span class="label">Subtotal</span>
            <span class="value">€@String.Format("{0:0.0}", Model.Sum(p => p.Price * p.Count))</span>
        </div>
        <div class="tax price_inline">
            <span class="label">Taxes</span>
            <span class="value">€@String.Format("{0:0.0}", Model.Sum(p => p.ExTax))</span>
        </div>
    </div>
    <div class="cart-total price_inline">
        <span class="label">Total</span>
        <span class="value">€@String.Format("{0:0.0}", Model.Sum(p => p.Price * p.Count) + Model.Sum(p => p.ExTax))</span>
    </div>
</div>
<div class="checkout text-center">
    <a href="checkout.html" class="main-btn">Checkout</a>
</div>
 